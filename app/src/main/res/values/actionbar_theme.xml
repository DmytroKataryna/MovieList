<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application tab bar -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat">
        <!--<item name="android:actionBarTabStyle">@style/MyTheme.ActionBar.TabView</item>-->
        <!--<item name="actionBarTabStyle">@style/MyTheme.ActionBar.TabView</item>-->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- tab indicator -->
        <item name="android:background">@drawable/toolbar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/toolbar_background</item>
    </style>


    <!-- Material DEFAULT colors -->
    <color name="material_drawer_primary">#2196F3</color>
    <color name="material_drawer_primary_dark">#1976D2</color>
    <color name="material_drawer_primary_light">#BBDEFB</color>
    <color name="material_drawer_accent">#FF4081</color>
    <color name="material_drawer_window_background">#424242</color>
    <color name="material_drawer_background">#424242</color>
    <!-- Material DEFAULT text / items colors -->
    <color name="material_drawer_icons">#FFF</color>
    <color name="material_drawer_primary_text">#FB8C00</color>
    <color name="material_drawer_secondary_text">#FF9800</color>
    <color name="material_drawer_hint_text">#B8B8B8</color>
    <color name="material_drawer_divider">#B6B6B6</color>
    <!-- Material DEFAULT drawer colors -->
    <color name="material_drawer_selected">#E8E8E8</color>
    <color name="material_drawer_selected_text">#FF9800</color>


</resources>